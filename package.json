{
  "name": "book-writing-assistant",
  "displayName": "Book Writing Assistant",
  "description": "A VS Code extension for generating educational content and training materials in markdown format",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Other"
  ],
  "capabilities": {
    "virtualWorkspaces": true,
    "untrustedWorkspaces": {
      "supported": true
    }
  },
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "Author-AI-Assistant.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "Author-AI-Assistant.openChat",
        "title": "Open Book Writing Assistant",
        "category": "Book Writing"
      },
      {
        "command": "Author-AI-Assistant.openBookWriting",
        "title": "Open Book Writing Assistant",
        "category": "Book Writing"
      },
      {
        "command": "Author-AI-Assistant.createBookStructure",
        "title": "Create Book Structure",
        "category": "Book Writing"
      },
      {
        "command": "Author-AI-Assistant.openChatSidebar",
        "title": "$(comment-discussion) Book Writing Chat",
        "category": "Book Writing"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "bookWriting",
          "title": "Book Writing Assistant",
          "icon": "$(book)"
        }
      ]
    },
    "views": {
      "bookWriting": [
        {
          "id": "bookWritingChat",
          "name": "Writing Assistant Chat",
          "type": "webview",
          "icon": "$(comment-discussion)"
        },
        {
          "id": "bookWritingContent",
          "name": "Content Generator",
          "type": "webview",
          "icon": "$(file-text)"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.102.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "eslint": "^9.32.0",
    "typescript": "^5.9.2",
    "ts-loader": "^9.5.2",
    "webpack": "^5.101.0",
    "webpack-cli": "^6.0.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
